# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="/data/datastore/geospatial/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="gnzh"

# Set list of themes to pick from when loading at random
# Setting this variable when ZSH_THEME=random will cause zsh to load
# a theme from this variable instead of looking in $ZSH/themes/
# If set to an empty array, this variable will have no effect.
# ZSH_THEME_RANDOM_CANDIDATES=( "gnzh" "agnoster" )

# Uncomment the following line to use case-sensitive completion.
# CASE_SENSITIVE="true"t

# Uncomment the following line to use hyphen-insensitive completion.
# Case-sensitive completion must be off. _ and - will be interchangeable.
# HYPHEN_INSENSITIVE="true"

# Uncomment the following line to disable bi-weekly auto-update checks.
# DISABLE_AUTO_UPDATE="true"

# Uncomment the following line to automatically update without prompting.
# DISABLE_UPDATE_PROMPT="true"

# Uncomment the following line to change how often to auto-update (in days).
# export UPDATE_ZSH_DAYS=13

# Uncomment the following line if pasting URLs and other text is messed up.
# DISABLE_MAGIC_FUNCTIONS="true"

# Uncomment the following line to disable colors in ls.
# DISABLE_LS_COLORS="true"

# Uncomment the following line to disable auto-setting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# Caution: this setting can cause issues with multiline prompts (zsh 5.7.1 and newer seem to work)
# See https://github.com/ohmyzsh/ohmyzsh/issues/5765
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(history)

source $ZSH/oh-my-zsh.sh

export EDITOR=vim

# export MANPATH="/usr/local/man:$MANPATH"
# export LANG=en_US.UTF-8

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# start packages
alias base='sudo apt -y install zsh git curl wget virtualenv virtualenvwrapper iotop iostat gparted chromium-browser thunderbird libreoffice arandr copyq mate-terminal fonts-font-awesome nautilus nautilus-share cmus pulseaudio lm-sensors python3-pip nitrogen viewnior ffmpeg kid3 tilda unzip nmap vlc'

# general
alias esrc='code ~/source/ohmyconfig/zshrc_config'
alias ei3='code ~/source/ohmyconfig/i3_config'
alias src='source ~/.zshrc'
alias v='sudo vim'
alias gc='git clone'
alias ns='sudo netstat -tulpn | grep LISTEN'
alias chotm='sudo chown -R $USER:$USER .'
alias mkx='sudo chmod +x'
alias pse='sudo ps -ef | grep'
alias ss='sudo systemctl'
alias cps='rsync --progress'

#hadoop
alias cda='cd ~/accumulo/accumulo-2.0.1/bin'
alias cdh'cd ~/hadoop/hadoop-3.2.2'

# disk 
alias sgf='sudo sg_format -F --size=512 -Q -e'
alias sgs='sudo sg_turs -p'   

# ubuntu 
alias sai="sudo apt install"
alias sau="sudo apt update && sudo apt upgrade"

# HADOOP
export PDSH_RCMD_TYPE=ssh
export HADOOP_HOME=/data/datastore/geospatial/hadoop/hadoop-3.2.2
export HADOOP_INSTALL=$HADOOP_HOME
export HADOOP_MAPRED_HOME=$HADOOP_HOME
export HADOOP_COMMON_HOME=$HADOOP_HOME
export HADOOP_CONF_DIR=$HADOOP_HOME/etc/hadoop
export HADOOP_HDFS_HOME=$HADOOP_HOME
export HADOOP_COMMON_LIB_NATIVE_DIR=$HADOOP_HOME/lib/native
export HADOOP_YARN_HOME=$HADOOP_HOME
export HADOOP_OPTS="-Djava.library.path=$HADOOP_HOME/lib/native"
export YARN_HOME=$HADOOP_HOME
export LD_LIBRARY_PATH=$HADOOP_HOME/lib/native

# ACCUMULO
export ACCUMULO_HOME=/data/datastore/geospatial/accumulo/accumulo-2.0.1

# PATH w/ HDFS and GEOMESA ACCUMULO
export PATH=$PATH:$HADOOP_HOME/sbin:$HADOOP_HOME/bin:$ACCUMULO_HOME/bin:/data/datastore/geospatial/geomesa/geomesa-accumulo_2.12-3.3.0/bin

# ZOOKEEPER
export ZOOKEEPER_HOME=/data/datastore/geospatial/zookeeper/zookeeper-3.4.14

# GEOSERVER
export GEOSERVER_HOME=/data/datastore/geospatial/geoserver/geoserver-2.17.3

# GEOMESA
export GEOMESA_SPARK_JARS=/data/datastore/geospatial/geomesa/libs
#export GEOMESA_EXTRA_CLASSPATHS=/data/datastore/geospatial/geomesa/libs/ivx-data-format.jar

# SPARK
export SPARK_HOME=/data/datastore/geospatial/spark/spark-3.1.2

# AIRFLOW
export AIRFLOW_HOME=~/airflow

# JAVA
export ES_JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64/jre

# VIRTUALENV
export PATH=$HOME/.local/bin:$PATH
export WORKON_HOME=~/.virtualenvs
mkdir -p ~/.virtualenvs
source ~/.local/bin/virtualenvwrapper.sh 

